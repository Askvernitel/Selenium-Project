<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Different Page Tests" parallel="tests" verbose="1">

    <test name="User Auth Tests">
        <parameter name="BROWSER" value="Firefox"/>
        <parameter name="AUTH_DATA_FILEPATH" value="test-data/auth/data.json"/>
        <classes>
            <class name="tests.ui.AuthTests" > </class>
        </classes>
    </test>
    <test name="Page Tests">
        <parameter name="BROWSER" value="Firefox"/>
        <parameter name="AUTH_DATA_FILEPATH" value="test-data/auth/data.json"/>
        <classes>
            <class name="tests.ui.PageTests" ></class>
        </classes>
    </test>
</suite>

